#!/usr/bin/env bash

#ANSI color codes
[ $BASH_VERSINFO -ge 4 ] && export escapeChar=$'\e' || export escapeChar=$'\033'

export normal="$escapeChar[0m"
export bold="$escapeChar[1m"
export dim="$escapeChar[2m"
export italics="$escapeChar[3m" 
export underlined="$'\e'[4m"
export blink="$escapeChar[5m"
export reverse="$escapeChar[7m"
export blinkOff="$escapeChar[25m"

[ $BASH_VERSINFO -ge 4 ] && declare -A colors effects
[ $BASH_VERSINFO -ge 4 ] && effects=( [bold]="$escapeChar[1m" [dim]="$escapeChar[2m" [italics]="$escapeChar[3m" [underlined]="$escapeChar[4m" [blink]="$escapeChar[5m" [reverse]="$escapeChar[7m" [hidden]="$escapeChar[8m" [blinkOff]="$escapeChar[25m" )

colors=( [red]="$escapeChar[31m" [green]="$escapeChar[32m" [blue]="$escapeChar[34m" [cyan]="$escapeChar[36m" [yellowOnRed]="$escapeChar[33;41m" [greenOnBlue]="$escapeChar[32;44m" [yellowOnBlue]="$escapeChar[33;44m" [cyanOnBlue]="$escapeChar[36;44m" [whiteOnBlue]="$escapeChar[37;44m" [redOnGrey]="$escapeChar[31;47m" [blueOnGrey]="$escapeChar[34;47m" )
export colors effects
