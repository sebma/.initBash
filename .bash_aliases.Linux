lswiFiInterfaces() {
	set -o pipefail
	if \ls /sys/class/ieee80211/*/device/net 2>/dev/null;then
		:
	elif \ls -d /sys/class/net/*/wireless 2>/dev/null | awk -F/ '{print$5}';then
		:
	fi | egrep -v "p2p[0-9]"
	set +o pipefail
}

export wiFiInterface=$(lswiFiInterfaces | head -1)

