function lswiFiInterfaces {
	set -o pipefail
	if \ls /sys/class/ieee80211/*/device/net 2>/dev/null;then
		:
	elif find /sys/class/net -follow -maxdepth 2 -name wireless 2>/dev/null | cut -d / -f 5;then # cf. https://wiki.debian.org/wl#Switch_between_wl.2FOSS_drivers
		:
	elif [ "$osFamily" = Android ];then
		$getprop wifi.interface
	fi | \egrep -v "p2p[0-9]"
	set +o pipefail
}

export wiFiInterface=$(lswiFiInterfaces | head -1)

