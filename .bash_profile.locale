test -z "$LANG" && export LANG=$(locale -a 2>/dev/null | awk 'BEGIN{IGNORECASE=1}/(fr_FR|en_US|en_UK).utf/{print$1;exit}')
locale 2>&1 | grep -q "locale: Cannot set LC_ALL to default locale: No such file or directory" && unset LC_ALL
locale 2>&1 | grep -q "locale: Cannot set LC_CTYPE to default locale: No such file or directory" && export LC_CTYPE=C.UTF-8
