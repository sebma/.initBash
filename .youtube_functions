	youtube_dl=$(which youtube-dl)
	youtubeURLPrefix=https://www.youtube.com/watch?v=
	dailymotionURLPrefix=https://www.dailymotion.com/video/
#	youtube_dl_Format=$(LANG=C.UTF-8 $youtube_dl -F $url | grep -vw only  | egrep '(m4a|mp4|flv) .*([0-9]+x[0-9]+)|(unknown)' | sort -k 2,2 -k 3,3rn | awk '{printf$1"/"}')
	youtube_dl_Format="mp4[height<=?720]"
	test $# != 0 && echo "=> There are $# urls to download ..."
	i=0
	for url
