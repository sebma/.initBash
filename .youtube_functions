				url=$youtubeURLPrefix$url
			elif $youtube_dl -f "$format" -qs $dailymotionURLPrefix$url 2>/dev/null
			then
				url=$dailymotionURLPrefix$url
			fi
		fi

#		format=$($youtube_dl -F $url | grep -vw only  | egrep '(m4a|mp4|flv) .*([0-9]+x[0-9]+)|(unknown)' | sort -k 2,2 -k 3,3rn | awk '{printf$1"/"}')
		echo
		fileName=$($youtube_dl -f $format --get-filename "$url" --restrict-filenames)
		echo "=> fileName = <$fileName>"
		echo
		if [ -f "$fileName" ] && [ ! -w "$fileName" ]
